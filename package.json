{
  "name": "velovra-platform",
  "private": true,
  "packageManager": "bun@1.3.0",
  "workspaces": [
    "apps/frontend/",
    "packages/@velovra-internal/*",
    "templates/"
  ],
  "scripts": {
    "all:fmt": "bunx --bun biome format --write",
    "fe:dev": "bunx turbo run fe:dev",
    "fe:build": "bunx turbo run fe:build",
    "fe:start": "bunx turbo run fe:start",
    "fe:preview": "bunx turbo run fe:preview",
    "fe:lint": "bunx turbo run fe:lint",
    "fe:check": "bunx turbo run fe:check",
    "fe:fmt": "bunx turbo run fe:fmt",
    "fe:types": "bunx turbo run fe:types",
    "pkg:build": "bunx turbo pkg:build",
    "pkg:lint": "bunx turbo pkg:lint",
    "pkg:check": "bunx turbo pkg:check",
    "pkg:fmt": "bunx turbo pkg:fmt",
    "pkg:types": "bunx turbo pkg:types",
    "script:id": "sh ./scripts/helpers/js-id.sh"
  },
  "devDependencies": {
    "typescript": "5.9.3",
    "turbo": "2.6.3",
    "@biomejs/biome": "2.3.8",
    "@types/bun": "1.3.4"
  }
}
